<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akcijos.ui.UserCartFragment">

    <TextView
        android:id="@+id/user_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:text="Your Cart"
        android:paddingStart="15dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_cart_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_cart"
        android:layout_margin="10dp"
        tools:listitem="@layout/recyclerview_item" />

    <TextView
        android:id="@+id/selection_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="@string/shop_selection_no_shops"
        android:textColor="#000000" />

</RelativeLayout>